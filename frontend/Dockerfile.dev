# Development Dockerfile for hot-reloading
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code (will be overridden by volume mount)
COPY . .

# Expose Vite dev server port
EXPOSE 3001

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3001"]
